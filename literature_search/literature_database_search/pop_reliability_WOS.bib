@article{ WOS:000861984100001,
Author = {Migliaccio, Vincenzo and Putti, Rosalba and Scudiero, Rosaria},
Title = {Metallothionein gene expression in rat tissues: response to dietary
   restriction after orally dichlorodiphenyldichloroethylene (DDE) exposure
   and high-fat feeding},
