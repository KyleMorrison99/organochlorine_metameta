}

@article{ WOS:000853338800001,
Author = {Yang, Kaige and Zhang, Zhouyi and Hu, Kangdie and Peng, Bo and Wang,
   Weiwei and Liang, Hong and Yan, Chao and Wu, Mingyuan and Wang, Yan},
Title = {Untargeted metabolomic analysis of pregnant women exposure to
   perfluorooctanoic acid at different degrees},
Journal = {FRONTIERS OF ENVIRONMENTAL SCIENCE \& ENGINEERING},
Year = {2023},
Volume = {17},
Number = {3},
Month = {MAR},
Abstract = {Perfluorooctanoic acid (PFOA) is a novel type of persistent synthetic
   organic pollutant, and its exposure on pregnant women can cause some
   adverse effects, such as pregnancy-induced hypertension, gestational
   diabetes mellitus, and preeclampsia. Therefore, understanding the
   metabolic changes caused by PFOA exposure is of great significance to
   protect pregnant women from its adverse effects. In this study, the
   metabolomes from the urine samples of pregnant women exposure to PFOA at
   different degrees were analyzed by GC-MS and LC-MS. The samples in
   different groups were distinguished and the differential metabolites
