@article{ WOS:001182300600007,
Author = {Hoelen, Thomay-Claire A. and Willems, Paul C. and Loenen, Arjan and
   Meisel, Hans Joerg and Wang, Jeffrey C. and Jain, Amit and Buser, Zorica
   and Arts, Jacobus J.},
Title = {The Evidence for the Use of Osteobiologics in Hybrid Constructs
   (Anterior Cervical Discectomy and Fusion and Total Disc Replacement) in
