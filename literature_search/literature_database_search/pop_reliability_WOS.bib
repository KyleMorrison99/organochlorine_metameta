@article{ WOS:000923647600001,
Author = {Chen, Ling and Zhu, Mengyuan and Liu, Yafeng and Yang, Zhongchao and Li,
   Huan and Mu, Hongxin and Liu, Su and Wu, Bing},
Title = {Perfluorobutanesulfonate exposure induces metabolic disturbances in
   different regions of mouse gut},
Journal = {SCIENCE OF THE TOTAL ENVIRONMENT},
Year = {2023},
Volume = {866},
Month = {MAR 25},
Abstract = {Perfluorobutanesulfonate (PFBS), an alternative to
   perfluorooctanesulfonate (PFOS), has raised many health concerns.
   However, PFBS toxicity in the mammalian gut remains unclear. C57BL/6
   mice were exposed to 10 mu g/L and 500 mu g/L PFBS or 500 mu g/L PFOS in
   their water supply for 28 days. PFBS toxicity in the ileum and colon was
   explored and com-pared to that of PFOS. Biochemical analysis showed that
   tumor necrosis factor-a (TNF-a) and interleukin-1f3 (IL-1f3) levels
   increased in the ileum exposed to 10 mu g/L PFBS, whereas no significant
   changes were observed in those levels in the colon. Catalase (CAT)
   activity, malondialdehyde (MDA), TNF-a, and IL-1f3 levels increased and
   glutathione (GSH) levels decreased in the ileum of the 500 mu g/L-PFBS
   group, whereas only MDA levels increased in the colon of the 500 mu
   g/L-PFBS group. The results showed that more severe damage occurred in
   the ileum than in the colon after PFBS exposure, and these align with
   the 500 mu g/L-PFOS group exposure as well. Furthermore, metabolomic
   anal-ysis revealed glutathione metabolism as a vital factor in inducing
   PFBS and PFOS toxicities in the ileum. Steroid hor-mone and amino acid
   metabolisms were other important factors involved in PFBS and PFOS
   toxicities, respectively. In the colon, GSH, pyrimidine, and glucose
   (especially galactose) metabolism was the main contributor to PFBS
   toxicity, and sulfur amino acid metabolism was the main pathway for PFOS
   toxicity. This study provides more evidence of the health hazards due to
   low-dose PFBS exposure in the mammalian gut.},
